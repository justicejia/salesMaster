<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/standard_layout_margin_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/standard_text_light_black"
        android:textSize="16sp"
        tools:text="张彬彬" />

    <TextView
        android:id="@+id/client_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_below="@id/client_name"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/standard_layout_margin_horizontal"
        android:layout_marginTop="5dp"
        android:textColor="@color/standard_text_light_gray"
        android:textSize="12sp"
        tools:text="职位：策划经理 手机号：15608066587" />

    <ImageView
        android:id="@+id/client_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/standard_layout_margin_horizontal"
        android:src="@drawable/client_unselect" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/standard_line_light" />

</RelativeLayout>