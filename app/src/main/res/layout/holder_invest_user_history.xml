<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/user_invest_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_centerVertical="true"
        android:textColor="@color/standard_text_gray"
        android:textSize="14sp"
        tools:text="231231:" />

    <TextView
        android:id="@+id/user_invest_item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_invest_item_date"
        android:layout_centerVertical="true"
        android:textColor="@color/text_black_151515"
        tools:text="12421412" />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ico_arrow_right" />

</RelativeLayout>