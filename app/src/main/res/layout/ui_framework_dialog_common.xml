<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_dialog_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ui_framework_common_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_small_xxxxx"
        android:gravity="center_horizontal"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_middle_xxx" />

    <TextView
        android:id="@+id/content_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_small_xxxxx"
        android:layout_marginRight="@dimen/margin_small_xxxxx"
        android:layout_marginTop="@dimen/margin_middle_x"
        android:gravity="center_horizontal"
        android:text="content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_middle_x" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_middle_xxxxx"
        android:background="@color/standard_line_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_medium_xx"
            android:paddingTop="@dimen/margin_medium_xx"
            android:text="@string/cancel"
            android:textColor="@color/home_icon_selected"
            android:textSize="@dimen/text_middle_x" />

        <View
            android:id="@+id/common_dialog_port_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/standard_line_light" />

        <TextView

            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_medium_xx"
            android:paddingTop="@dimen/margin_medium_xx"
            android:text="@string/confirm"
            android:textColor="@color/standard_text_light_black"
            android:textSize="@dimen/text_middle_x" />
    </LinearLayout>

</LinearLayout>