<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="@dimen/standard_layout_margin_horizontal"
            android:paddingRight="@dimen/standard_layout_margin_horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:src="@drawable/ico_arrow_left_blue" />

            <TextView
                style="@style/activity_title"
                android:text="添加客户" />

            <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="确定"
                android:textColor="@color/standard_text_light_gray"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/standard_line_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/standard_layout_margin_horizontal"
            android:layout_marginRight="@dimen/standard_layout_margin_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="姓名"
                android:textColor="@color/standard_text_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/add_client_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入客户姓名"
                android:textColorHint="@color/standard_text_light_gray"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:maxLength="6"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/standard_layout_margin_horizontal"
            android:background="@color/standard_line_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/standard_layout_margin_horizontal"
            android:layout_marginRight="@dimen/standard_layout_margin_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="职位"
                android:textColor="@color/standard_text_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/add_client_job"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入客户职位"
                android:textColorHint="@color/standard_text_light_gray"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/standard_layout_margin_horizontal"
            android:background="@color/standard_line_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/standard_layout_margin_horizontal"
            android:layout_marginRight="@dimen/standard_layout_margin_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="联系方式"
                android:textColor="@color/standard_text_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/add_client_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="请输入客户手机号"
                android:textColorHint="@color/standard_text_light_gray"
                android:textSize="16sp"
                android:inputType="phone"
                android:maxLength="15"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/standard_layout_margin_horizontal"
            android:background="@color/standard_line_light" />

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>