<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/standard_layout_margin_vertical"
    android:paddingLeft="@dimen/standard_layout_margin_horizontal"
    android:paddingRight="@dimen/standard_layout_margin_horizontal"
    android:paddingTop="@dimen/standard_layout_margin_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/person_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:bufferType="spannable"
            android:includeFontPadding="false"
            android:textColor="@color/standard_text_black"
            android:textSize="16sp"
            tools:text="@sample/names" />

        <Space
            android:layout_width="0dp"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textSize="14sp"
            tools:text="@sample/longstrings" />

        <Space
            android:layout_width="0dp"
            android:layout_height="8dp" />


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="12sp"
            tools:text="@sample/names" />

    </LinearLayout>

    <TextView
        android:id="@+id/project"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="18dp"
        android:background="@color/standard_background_f5"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3"
        android:padding="3dp"
        android:textSize="13sp"
        tools:text="@sample/longstrings" />

</LinearLayout>