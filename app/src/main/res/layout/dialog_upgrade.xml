<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="275dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/upgrade_dialog_bg">

    <ImageView
        android:id="@+id/upgrade_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/upgrade_bg" />

    <TextView
        android:id="@+id/upgrade_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="1.1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/upgrade_version"
        android:layout_marginLeft="30dp"
        android:text="版本更新"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/upgrade_content"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/upgrade_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="3dp"
        android:textColor="@color/standard_text_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/upgrade_download"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_below="@id/upgrade_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/download_bg"
        android:gravity="center"
        android:text="立即下载"
        android:textColor="@color/white" />

</RelativeLayout>