<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingBottom="7dp">

            <TextView
                android:id="@+id/tv_invest_goal"
                android:layout_width="86dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_blue_bg"
                android:gravity="center"
                android:text="投放目标"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_400_goal"
                android:layout_width="86dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_grey_bg"
                android:gravity="center"
                android:text="400目标"
                android:textColor="@color/standard_text_gray"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/standard_line_light" />

    <FrameLayout
        android:id="@+id/user_goal_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>