<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="BaseTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MainTheme" parent="BaseTheme">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="loadingDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!--选择图片方式dialog-->
    <style name="BottomDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
    </style>

    <style name="BottomDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_exit</item>
    </style>


    <style name="activityAnim" parent="BaseTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/ZoomEffect</item>
    </style>

    <style name="ZoomEffect" parent="@android:style/Animation.Dialog">
        <item name="android:activityOpenEnterAnimation">@anim/zoomin</item>
        <item name="android:activityCloseExitAnimation">@anim/zoomout</item>
    </style>


    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_loading_more</item>
        <item name="android:minWidth">18dp</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="AlertDialogFragmentTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ZoomInAndOut</item>
    </style>

    <!-- 屏幕为竖屏时DialogFragment 弹出样式 -->
    <style name="BottomDialog" parent="@style/AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- Dialog进入及退出动画 -->
    </style>

    <style name="BottomToTopAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/ui_framework_anim_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/ui_framework_anim_push_bottom_out</item>
    </style>

    <style name="ZoomInAndOut" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/ui_framework_anim_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/ui_framework_anim_dialog_exit</item>
    </style>

    <!-- 屏幕为竖屏时DialogFragment 弹出样式 -->

    <style name="webview_progress_style">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_states
        </item><!-- progress_horizontal -->
        <item name="android:minHeight">3dp</item>
        <item name="android:maxHeight">3dp</item>
    </style>

    <style name="activity_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/standard_text_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="empty_hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/standard_text_light_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--常用的分割线-->
    <style name="standard_line">
        <item name="android:layout_height">@dimen/standard_line_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/standard_line_light</item>
    </style>

    <!--常用的比较高的分割线-->
    <style name="standard_high_line">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/standard_background_f5</item>
    </style>

    <style name="InputDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">bottom</item>
        <!--<item name="android:windowFrame">@null</item>-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#33000000</item>
    </style>

    <style name="popupStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_anim_in</item>
        <item name="android:windowExitAnimation">@anim/popup_anim_out</item>
    </style>


</resources>
